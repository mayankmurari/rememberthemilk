.form_actions
  %div.moreactions 
    .btn-group            
= form_for (@task), :html=> {:id => 'task_form_i'}, remote: true do |f|
  .field.clearfix
    = f.text_field :content, :placeholder => "<< Add a new task", :id=>"task_contenti", :class=>"contentarea",  :autocomplete => :off
    = f.hidden_field :type, { :value => "Inbox"} 
#loading-indicator
  = image_tag("ajax-loader.gif", :id => "loading-indicator") 

%ul#inbox.tasklist
= form_tag complete_tasks_path, :id => 'complete_form_inb' do  
  = submit_tag "Completed", class: "completebutton", name: "completebutton"
  = submit_tag "Postpone", class: "postponebutton", name: "postponebutton"
  = submit_tag "Delete", class: "submitbutton", :name => 'deletebutton', :method => :delete

  %li.dropdown
  %adrpdown#drop6.moreactions{"data-toggle" => "dropdown", href: "#", role: "button"}
    More Actions..
    %b.caret1
  %ul#menu3.dropdown-menu.drpi{"aria-labelledby" => "drop6", role: "menu"}
    %li{role: "presentation"}
      %span.drpdwn_span Set Priority
      %a.drpdown= submit_tag "1",  id: 'set1', class: 'droplist'
    %li{role: "presentation"}
      %a.drpdown= submit_tag "2",  id: 'set2', class: 'droplist'
    %li{role: "presentation"}
      %a.drpdown= submit_tag "3",  id: 'set3', class: 'droplist'
    %li.divider{role: "presentation"}
    %li{role: "presentation"}
      %a.drpdown= submit_tag "Move Up", :name => 'setup', id: 'setup', class: 'droplist'   
    %li{role: "presentation"}
      %a.drpdown= submit_tag "Move Down", :name => 'setdown', id: 'setdown', class: 'droplist' 
    %li.divider{role: "presentation"}
    %li{role: "presentation"}
      %span.drpdwn_span Move to..
      %a.drpdown= submit_tag "Inbox", id: 'movetoinb', class: 'droplist'
    %li{role: "presentation"}
      %a.drpdown= submit_tag "Personal", id: 'movetopers', class: 'droplist'
    %li{role: "presentation"}
      %a.drpdown= submit_tag "Work", id: 'movetowork', class: 'droplist'
    %li{role: "presentation"}
      %a.drpdown= submit_tag "Study", id: 'movetostd', class: 'droplist'
